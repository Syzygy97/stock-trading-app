<div id="stocks-container">
  <%= render "portfolios/sidebar"%>
  <div class="stocks-content">
    <%= render "portfolios/header"%>
    <main class="stocks-dashboard">
      <div class="stock-name">
        <h2>Company (most-active)</h2>
        <% @stocks.each do |stock| %>
          <ul>
            <li><%= link_to stock.company_name, stock %></li>
          </ul>
        <% end %>
      </div>
      <div class="stock-symbol">
        <h2>Symbol</h2>
        <% @stocks.each do |stock| %>
          <ul>
            <li><%= stock.symbol %></li>
          </ul>
        <% end %>
      </div>
      <div class="stock-price">
        <h2>Price</h2>
        <% @client.stock_market_list(:mostactive).map(&:latest_price).each do |stock| %>
          <ul>
            <li>$ <%= stock %></li>
          </ul>
        <% end %>
      </div>
      <div class="stock-delta">
        <h2>Change</h2>
        <% @client.stock_market_list(:mostactive).map(&:change).each do |stock| %>
          <ul>
            <% if stock.to_f > 0 %>
              <li style="color: green"><%= stock %></li>
            <% elsif stock.to_f < 0 %>
              <li style="color: red"><%= stock %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="stock-percent-delta">
        <h2>%Change</h2>
        <% @client.stock_market_list(:mostactive).map(&:change_percent_s).each do |stock| %>
          <ul>
            <% if stock.to_f > 0 %>
              <li style="color: green">(<%= stock %>)</li>
            <% elsif stock.to_f < 0 %>
              <li style="color: red">(<%= stock %>)</li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="stock-options">
        <h2 class="forex-rate">Forex($1 USD -> PHP): 55.84 PHP </h2>
        <div>
          <button>BUY</button>
          <button>SELL</button>
        </div>
        <div>
          <button>BUY</button>
          <button>SELL</button>
        </div>
      </div>
    </main>
  </div>
</div>