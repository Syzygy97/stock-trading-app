<%= form_with(url: update_user_url(current_user), scope: :user, data: { turbo: false }, method: :patch) do |form| %>
  
  <div class = "portfolio-form">
    <%= form.number_field :balance, autocomplete: "off", value: nil, step: 0.01, placeholder: "Enter amount" %>
  </div>

  <div class="transaction-option">
    <button class="deposit-btn">
      <%= form.submit "Deposit" %>
    </button>
    <button class="withdraw-btn">
      <%= form.submit "Withdraw" %>
    </button>
  </div>

<% end %>