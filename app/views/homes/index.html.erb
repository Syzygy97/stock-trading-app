<div class="container container-lp">
  <%= render "shared/navbar" %>
  <div class="wrapper">
    <div class="lp-details">
      <div class="lp-details-cont">
        <% if !user_signed_in? %>
        <div class="lp-details-1">WELCOME TO ASTR</div>
        <div class="lp-details-2">Conquering the world of crypto, one trade at a time</div>
        <div class="lp-details-3">
          ASTR is your friendly stock trading application! With ASTR, buying and selling stocks on the market has never been easier.
        </div>
        <div class="lp-details-btn">
          <button>
            <%= link_to "Get Started", new_user_registration_path %>
          </button>
        <% end %>
        <% if current_user %>
          <% if current_user.approved? %>
            <div class="lp-details-1">Account has been approved. You can now start trading.</div>
            <%# <div class="lp-details-2">//Selling Tagline//</div> %>
            <div class="lp-details-3"> </div>
            <div class="lp-details-btn">
            <button>
              <%= link_to "Portfolio", users_portfolios_path %>
            </button>
          <% else %>
            <div class="lp-details-1">Successfully registered. Welcome to ASTR, <%= current_user.email %>!</div>
            <%# <div class="lp-details-2">//Selling Tagline//</div> %>
            <div class="lp-details-3">Kindly wait for your account approval.</div>
            <div class="lp-details-btn">
            <button>
              <%#= link_to "Back", new_user_registration_path %>
              <%= link_to "Back", destroy_user_session_path, class: "sign-out", data: { "turbo-method": :delete } %>
            </button>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
    <div class="lp-photo">
      <div></div>
    </div>
  </div>
</div>